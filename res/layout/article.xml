<android.support.design.widget.CoordinatorLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:id="@+id/article_layout">

  <uk.co.busydoingnothing.prevo.DelayedScrollView
        a:id="@+id/article_scroll_view"
        a:layout_width="match_parent"
        a:layout_height="match_parent" />

  <android.support.design.widget.FloatingActionButton
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_gravity="bottom|right"
        a:layout_margin="16dp"
        a:src="@drawable/ic_search_white_24dp"
        app:layout_anchor="@id/article_scroll_view"
        app:layout_anchorGravity="bottom|right|end"
        a:onClick="fab_onClick"/>

</android.support.design.widget.CoordinatorLayout>
