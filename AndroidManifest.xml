<manifest xmlns:a="http://schemas.android.com/apk/res/android"
          package="uk.co.busydoingnothing.prevo"
          a:versionCode="8"
          a:versionName="0.8"
          a:installLocation="auto">
  <uses-sdk a:minSdkVersion="7" a:targetSdkVersion="14" />

  <application a:label="@string/app_name"
               a:icon="@drawable/ic_launcher"
               a:hardwareAccelerated="true"
               a:debuggable="true">
    <activity a:name="LanguagesActivity"
              a:label="@string/app_name">
      <intent-filter>
        <action a:name="android.intent.action.MAIN" />
        <category a:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity a:name="SearchActivity"
              a:label="@string/search">
    </activity>
    <activity a:name="ArticleActivity">
    </activity>
    <activity a:name="SelectLanguageActivity"
              a:label="@string/app_name">
    </activity>
    <activity a:name="PreferenceActivity"
              a:label="@string/app_name">
    </activity>
  </application>
</manifest>
